<% include layout/navbar %>

<div class="row justify-content-center p-5 m-0">
    <h1 class="w-100 text-center mb-5">Update Data</h1>
    <div class="col-md-3">
        <form action="/data/upgrade" method="POST">
            <div class="form-group">
                <input type="text" name="name" class="form-control" value="<%= name %>" placeholder="Name" autofocus required>
            </div>
            <div class="form-group">
                <input type="email" name="email" class="form-control" value="<%= email %>" placeholder="Email" required>
            </div>
            <div class="form-group">
                <input type="number" name="age" class="form-control" value="<%= age %>" placeholder="Age" required>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input type="radio" name="sex" class="form-check-input" value="female" required>
                    <label class="form-check-label">female</label>
                </div>
                <div class="form-check">
                    <input type="radio" name="sex" class="form-check-input" value="male" required>
                    <label class="form-check-label">male</label>
                </div>
            </div>
            <input type="submit" class="btn btn-primary btn-block" value="Send">
        </form>
    </div>
    <h4 class="text-muted w-100 text-center mt-3">Don't work yet</h4>
</div>

<% include layout/footer %></div>