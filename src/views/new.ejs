<% include layout/navbar %>

<div class="row justify-content-center p-5 m-0">
    <h1 class="w-100 text-center mb-5">New Data</h1>
    <div class="col-md-3">
        <form action="/data/new" method="POST">
            <div class="form-group">
                <input type="text" name="name" class="form-control" placeholder="Name" autofocus required>
            </div>
            <div class="form-group">
                <input type="email" name="email" class="form-control" placeholder="Email" required>
            </div>
            <div class="form-group">
                <input type="number" name="age" class="form-control" placeholder="Age" required>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input type="radio" name="sex" class="form-check-input" value="female" required>
                    <label class="form-check-label">female</label>
                </div>
                <div class="form-check">
                    <input type="radio" name="sex" class="form-check-input" value="male" required>
                    <label class="form-check-label">male</label>
                </div>
            </div>
            <input type="submit" class="btn btn-primary btn-block" value="Send">
        </form>
    </div>
</div>

